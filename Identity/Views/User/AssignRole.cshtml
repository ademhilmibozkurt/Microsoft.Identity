@model RoleAssignSendModel

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<form asp-action="AssignRole" class="p-4 w-25 mx-auto shadow" method="post">

    <input type="hidden" asp-for="@Model.UserId" />

    <div class="list-group">
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            <input type="hidden" asp-for="@Model.Roles[i].Name" />
            <input type="hidden" asp-for="@Model.Roles[i].RoleId" />

            <li class="list-group-item">
                <input class="form-check-input me-1" asp-for="@Model.Roles[i].IsExist">
                <label class="form-check-label stretched-link" for="firstCheckboxStretched"> @Model.Roles[i].Name </label>
            </li>
        }
        
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary"> Kaydet </button>
    </div>

    <div class="text-dange mt-2" asp-validation-summary="ModelOnly">
    </div>

</form>
